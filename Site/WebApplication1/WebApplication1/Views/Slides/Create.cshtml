@model Models.Slide

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm("Create", "Slides",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.ImgUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Kendo().Upload().Name("fileUpload").Multiple(false)
                    @Html.HiddenFor(model => model.ImgUrl)
                    @Html.ValidationMessageFor(model => model.ImgUrl)
                </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HeadTitle1, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.HeadTitle1)

                @Html.ValidationMessageFor(model => model.HeadTitle1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HeadTitle2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.HeadTitle2)

                @Html.ValidationMessageFor(model => model.HeadTitle2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Headtext, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.Headtext)

                @Html.ValidationMessageFor(model => model.Headtext)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BtnLink, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.BtnLink)

                @Html.ValidationMessageFor(model => model.BtnLink)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BtnText, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.BtnText)

                @Html.ValidationMessageFor(model => model.BtnText)
            </div>
        </div>

        <div class="form-group">
			<div class="col-md-2">
            </div>
            <div class="col-md-10">
                    @Html.EditorFor(model => model.IsActive)

				@Html.LabelFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.Description)

                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
        </div>
</div>
}

